@model FStudent.Models.ViewModels.ProfileVM
@{
    ViewData["Title"] = "Thông tin tài khoản";
}
<div class="container p-3">
    <div class="flex-row d-flex mb-3">
        <div class="w-50">
            <h2 class="text-primary">Thông tin tài khoản</h2>
        </div>
        <div class="w-50 d-flex align-middle justify-content-end text-danger">
            <b class="text-danger">@Model.StatusMessage</b>
        </div>
    </div>
    <div class="d-flex flex-column">
        <div class="form-group d-flex text-left mb-2 align-items-center">
            <div class="w-25 pl-2">
                <label asp-for="Profile.FullName" class="my-auto"></label>
            </div>
            <div class="w-75">
                @Model.Profile.FullName
            </div>
        </div>
        <hr style="width:100%;text-align:left;margin-left:0">
        <div class="form-group d-flex text-left mb-2 align-items-center">
            <div class="w-25 pl-2">
                <label asp-for="Profile.NickName" class="my-auto"></label>
            </div>
            <div class="w-75">
                @Model.Profile.NickName
            </div>
        </div>
        <hr style="width:100%;text-align:left;margin-left:0">
        <div class="form-group d-flex text-left mb-2 align-items-center">
            <div class="w-25 pl-2">
                <label asp-for="Profile.DateOfBirth" class="my-auto"></label>
            </div>
            <div class="w-75">
            </div>
        </div>
        <hr style="width:100%;text-align:left;margin-left:0">
        <div class="form-group d-flex text-left mb-2 align-items-center">
            <div class="w-25 pl-2">
                <label asp-for="Profile.GenderId" class="my-auto"></label>
            </div>
            <div class="w-75">
                @Model.Profile.Gender.ShortDesc
            </div>
        </div>
        <hr style="width:100%;text-align:left;margin-left:0">
        <div class="form-group d-flex text-left mb-2 align-items-center">
            <div class="w-25 pl-2">
                <label asp-for="Profile.PhoneNumber" class="my-auto"></label>
            </div>
            <div class="w-75">
                @Model.Profile.PhoneNumber
            </div>
        </div>
        <hr style="width:100%;text-align:left;margin-left:0">
        <div class="form-group d-flex text-left mb-2 align-items-center">
            <div class="w-25 pl-2">
                <label asp-for="Profile.Email" class="my-auto"></label>
            </div>
            <div class="w-75">
                @Model.Profile.Email
            </div>
        </div>
        <hr style="width:100%;text-align:left;margin-left:0">
        <div class="form-group d-flex text-left mb-2 align-items-center">
            <div class="w-25 pl-2">
                <label asp-for="Profile.Skype" class="my-auto"></label>
            </div>
            <div class="w-75">
                @Model.Profile.Skype
            </div>
        </div>
        <hr style="width:100%;text-align:left;margin-left:0">
        <div class="form-group d-flex text-left mb-2 align-items-center">
            <div class="w-25 pl-2">
                <label asp-for="Profile.Zalo" class="my-auto"></label>
            </div>
            <div class="w-75">
                @Model.Profile.Zalo
            </div>
        </div>
        <hr style="width:100%;text-align:left;margin-left:0">
        <div class="form-group d-flex text-left mb-2 align-items-center">
            <div class="w-25 pl-2">
                <label asp-for="Profile.Facebook" class="my-auto"></label>
            </div>
            <div class="w-75">
                @Model.Profile.Facebook
            </div>
        </div>
        <hr style="width:100%;text-align:left;margin-left:0">
        <div class="form-group d-flex text-left mb-2 align-items-center">
            <div class="w-25 pl-2">
